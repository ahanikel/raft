-- extra-source-files:
cabal-version:       >=1.10

executable raft
  hs-source-dirs:      src/main/haskell/raft
  main-is:             Main.hs
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  build-depends:       base
                     , containers
                     , mtl
                     , network
                     , random
  default-language:    Haskell2010

source-repository head
  type:     git
  location: https://github.com/ahanikel/raft
